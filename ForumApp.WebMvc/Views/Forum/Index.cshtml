@model IEnumerable<ForumApp.Models.ForumListItem>

@{
    ViewBag.Title = "Forums";
}

<h1>Forums</h1>
<p>
    @Html.ActionLink("New Forum", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var forum in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(forum.Name, "Details", new { id = forum.ForumId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => forum.Description)
            </td>
            <td>
                @if (forum.IsEditable)
                {
                    <div class="btn-group btn-group-xs">
                        @Html.ActionLink("Edit", "Edit", new { id = forum.ForumId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = forum.ForumId }, new { @class = "btn btn-danger" })
                    </div>
                }
            </td>
        </tr>
    }

</table>
