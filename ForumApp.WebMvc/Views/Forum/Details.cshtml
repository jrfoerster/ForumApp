@model ForumApp.Models.ForumDetail
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>
<p>
    @Html.ActionLink("New Thread", "Create", "Thread", new { id = Model.ForumId }, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Threads.First().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Threads.First().PostCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Threads.First().UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Threads.First().LastPostUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var thread in Model.Threads)
    {
        <tr>
            <td>
                @Html.ActionLink(thread.Title, "Details", "Thread", new { id = thread.ThreadId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => thread.PostCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => thread.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => thread.LastPostUtc)
            </td>
            <td>
                @if (thread.IsEditable)
                {
                    <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", "Thread", new { id = thread.ThreadId }, new { @class = "btn btn-xs btn-warning" })
                        @Html.ActionLink("Delete", "Delete", "Thread", new { id = thread.ThreadId }, new { @class = "btn btn-xs btn-danger" })
                    </div>
                }
            </td>
        </tr>
    }
</table>
