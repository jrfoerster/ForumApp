@model ForumApp.Models.ThreadEdit

@{
    string _title = "Edit Thread";
    ViewBag.Title = _title;
}

<h1>@_title</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ForumId)
        @Html.HiddenFor(model => model.ThreadId)
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.ThreadTitle, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.ThreadTitle, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ThreadTitle, "", new { @class = "text-danger" })
    </div>

    <div class="row mb-3">
        <div class="btn-group btn-group-lg">
            @Html.ActionLink("Cancel", "Details", "Forum", new { id = Model.ForumId }, new { @class = "btn btn-light" })
            <button type="submit" class="btn btn-warning">Edit</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
