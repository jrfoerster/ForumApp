@model ForumApp.Models.ThreadDetail
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

<table class="table table-striped">
    <tr>
        <th class="col-sm-4">
            @Html.DisplayNameFor(model => model.Posts.First().UserId)
        </th>
        <th class="col-sm-8">
            @Html.DisplayNameFor(model => model.Posts.First().Content)
        </th>
    </tr>

    @foreach (var post in Model.Posts)
    {
        <tr>
            <td>
                <p>
                    @Html.DisplayFor(modelItem => post.UserId)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => post.CreatedUtc)
                </p>
            </td>
            <td>
                <div>
                    @Html.DisplayFor(modelItem => post.Content)
                </div>

                @if (post.ModifiedUtc.HasValue)
                {
                    <div class="text-info">
                        @Html.DisplayFor(modelItem => post.ModifiedUtc)
                    </div>
                }

                @if (User.Identity.GetUserId() == post.UserId.ToString())
                {
                    <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", "Post", new { id = post.PostId }, new { @class = "btn btn-xs btn-warning" })
                        @Html.ActionLink("Delete", "Delete", "Post", new { id = post.PostId }, new { @class = "btn btn-xs btn-danger" })
                    </div>
                }
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Reply", "Create", "Post", new { id = Model.ThreadId }, new { @class = "btn btn-primary" })
</p>
